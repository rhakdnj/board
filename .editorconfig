root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 120
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
no-wildcart-imports = enabled

[*.{java,kt,kts}]
indent_size = 4

[*.{kt,kts}]
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL
ij_kotlin_allow_trailing_comma = true
